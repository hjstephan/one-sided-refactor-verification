{
  "name": "one-sided-refactor-verifier",
  "displayName": "One-Sided Refactor Verifier",
  "description": "Verify refactorings where code is extracted from one file into new files",
  "version": "2.3.0",
  "publisher": "hjstephan86",
  "repository": {
    "type": "git",
    "url": "https://github.com/hjstephan/one-sided-refactor-verification"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Other"
  ],
  "activationEvents": [
    "onCommand:refactor-verifier.verify"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "refactor-verifier.verify",
        "title": "Verify One-Sided Refactoring",
        "category": "Refactor Verifier"
      }
    ],
    "keybindings": [
      {
        "command": "refactor-verifier.verify",
        "key": "ctrl+shift+r v",
        "mac": "cmd+shift+r v"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "refactor-verifier.verify",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "test": "node ./tests/run_test.js",
    "test:coverage": "c8 --reporter=html --reporter=text --reporter=lcov npm test",
    "test:coverage-report": "c8 --reporter=html npm test && xdg-open coverage/index.html"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/vscode": "^1.75.0",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^3.2.1",
    "c8": "^10.1.3",
    "eslint": "^9.17.0",
    "glob": "^11.0.0",
    "globals": "^15.13.0",
    "mocha": "^11.0.1"
  }
}
